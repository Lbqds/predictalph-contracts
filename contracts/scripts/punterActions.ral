TxScript BidMultipleChoice(predict: MultipleChoice, tokenIdToHodl: ByteVec, amountHodl: U256, tokenIdToVote: ByteVec, amount: U256, side: U256) {
   let caller = callerAddress!()

   if(tokenIdToVote == ALPH && amountHodl <= 0 ){
      predict.bid{caller -> ALPH : amount}(amount, side)
   } else if (tokenIdToVote == ALPH && amountHodl > 0){
      predict.bid{caller -> ALPH : amount + amountHodl}(amount, side)
   }else if(amountHodl > 0){
      // 0.01 alph for the token spam protection
      predict.bid{caller -> ALPH : minimalContractDeposit!()+dustAmount!(), tokenIdToVote: amount, tokenIdToHodl: amountHodl}(amount, side) 
   }else{
      predict.bid{caller -> ALPH : minimalContractDeposit!()+dustAmount!(), tokenIdToVote: amount}(amount, side)
   }
   
}

TxScript ClaimMultipleChoice(predict: MultipleChoice, addressToClaim: Address) {
   predict.claim(addressToClaim)
}


TxScript BoostBet(predict: MultipleChoice, amount: U256){
   let caller = callerAddress!()
   predict.boost{caller -> ALPH: amount}(amount)
}